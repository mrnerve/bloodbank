

CREATE TABLE `slider` (
  `slider_id` int(11) NOT NULL,
  `slider_aciklama` varchar(255) CHARACTER SET utf8 NOT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_turkish_ci;

